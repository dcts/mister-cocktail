<div class="container">

  <h1>Edit Dose</h1>

  <%= simple_form_for(@dose) do |f| %>
    <%= f.input :description %>
    <%= f.input :ingredient_id, collection: Ingredient.all %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
  <%= link_to ("<p class='btn btn-danger'>Back</p>").html_safe, cocktail_path(@dose.cocktail) %>



</div>
