<div class="container">
  <h1><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to "EDIT", edit_dose_path(dose)  %>
    <%= link_to "DEL", dose_path(dose), method: :delete %>
    <br>
  <% end %>
  <%= link_to "add dose", new_cocktail_dose_path(@cocktail) %>
  <p><strong>Instructions</strong>: <%= @cocktail.instructions %></p>
  <%= link_to "edit", edit_cocktail_path(@cocktail) %>
  <br>
  <%= link_to "delete", cocktail_path(@cocktail), method: :delete %>
  <br>
  <%= link_to "back to main", cocktails_path %>
</div>

