<div class="container">
  <h1>Cocktails</h1>

  <ul>
    <% @cocktails.each do |cocktail| %>
      <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
    <% end %>
  </ul>
  <%= link_to ("<p class='btn btn-primary'>Add Cocktail</p>").html_safe, new_cocktail_path %>
  <br>
  <%= link_to ("<p class='btn btn-sm btn-dark'>Browse by Ingredients</p>").html_safe, ingredients_path %>
</div>
