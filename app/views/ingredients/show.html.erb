<div class="container">
  <h1>Cocktails with <%= @ingredient.name %></h1>

  <% @ingredient.cocktails.each do |cocktail| %>
    <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
  <% end %>
  <br>
  <%= link_to ("<p class='btn btn-sm btn-dark'>Back</p>").html_safe, ingredients_path %>
</div>
